extends ../template

block variables
  - var title = 'Авторизуйтесь'

block content
  section.section.hero#parallax-background
    .parallax__layer
      video(width="100%" height="auto" preload="auto" autoplay="autoplay" loop="loop").parallax__layer-video
        source(src="assets/video/night.mp4" type="video/mp4")
        source(src="assets/video/night.webm" type="video/webm")
    .parallax__layer
      img(src="assets/images/night_bg.png").parallax__layer-img
    .container
      .form-center
        form.form
          .hero__text Авторизуйтесь
          .form__authorization
            label(for="email").form__authorization-label
              svg.form__authorization-icon
                use(xlink:href="assets/images/sprite/sprite.svg#login")
              input(name="email" id="email" placeholder="Логин").form__authorization-input
          .form__authorization
            label(for="password").form__authorization-label 
              svg.form__authorization-icon
                use(xlink:href="assets/images/sprite/sprite.svg#passworld")
              input(name="password" id="password" placeholder="Пароль").form__authorization-input
          .hero__block
            label(class="hero__radio hero__radio_checkbox")
              input(type="checkbox" name="checkbox" id="checkbox" class="hero__radio-elem")
              .hero__radio-fake 
              .hero__radio-text Я человек
          .hero__robot-text Вы точно не робот?
          .hero__block
            label(class="hero__radio")
              input(type="radio" name="radio" id="radio1" class="hero__radio-elem") 
              .hero__radio-fake
              .hero__radio-text Да              
            label(class="hero__radio")
              input(type="radio" name="radio" id="radio2" class="hero__radio-elem")
              .hero__radio-fake 
              .hero__radio-text Не уверен   
          .hero__block
            a(href="/index.html").button.button-border На главную
            input(type="submit" name="Войти").button