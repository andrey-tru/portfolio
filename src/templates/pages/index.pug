extends ../template

block variables
  - var title = 'Андрей Трухачев'

block content
  section.section#parallax-background
    .parallax__layer
      video(width="100%" height="auto" preload="auto" autoplay="autoplay" loop="loop").parallax__layer-video
        source(src="assets/video/night.mp4" type="video/mp4")
        source(src="assets/video/night.webm" type="video/webm")
    .parallax__layer
      img(src="assets/images/night_bg.png").parallax__layer-img
    .container
      .authorization-wel
        a(href="/authorization.html").authorization-wel__btn Авторизоваться
      .form-center
        form.form
          .header__center
            .header__info
                .header__img
                .header-wel__name Андрей Трухачев
                .header__text Личный сайт веб разработчика
          ul.social-wel
            li.social__item
              a(href="https://vk.com/andrei_tr").social__btn
                svg.social__link-icon
                  use(xlink:href="assets/images/sprite/sprite.svg#vk")
            li.social__item
              a(href="https://github.com/andrey-tru").social__btn
                svg.social__link-icon
                  use(xlink:href="assets/images/sprite/sprite.svg#github")
            li.social__item
              a(href="https://www.instagram.com/andres36n/").social__btn
                svg.social__link-icon
                  use(xlink:href="assets/images/sprite/sprite.svg#inst")
          .hero__block
            a(href="/my-works.html").button.button-border Мои работы
            a(href="/about.html").button.button-border Обо мне
            a(href="/blog.html").button Блог